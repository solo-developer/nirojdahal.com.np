@model List<Personal.Domain.Entities.ContactUs>
@using Humanizer;
@{
    var unreadMessagesCount = Model.Count();
    var lastRead = Model.Any() ? Model.OrderByDescending(a => a.Date).First().Date : DateTime.Now;
}
<div class="row border-bottom">
    <nav class="navbar navbar-static-top" role="navigation" style="margin-bottom: 0">
        <div class="navbar-header">
            <a class="navbar-minimalize minimalize-styl-2 btn btn-primary " href="#"><i class="fa fa-bars"></i> </a>
            <form role="search" class="navbar-form-custom" action="search_results.html">
                <div class="form-group">
                    <input type="text" placeholder="Search for something..." class="form-control" name="top-search" id="top-search">
                </div>
            </form>
        </div>
        <ul class="nav navbar-top-links navbar-right">
            <li class="dropdown">
                    <a class="dropdown-toggle count-info" data-toggle="dropdown" href="#" aria-expanded="false">
                        <i class="fa fa-bell"></i>  <span class="label label-primary">@unreadMessagesCount</span>
                    </a>
                    <ul class="dropdown-menu dropdown-alerts">
                        <li>
                            <a href="/admin/messages" class="dropdown-item">
                                <div>
                                    <i class="fa fa-envelope fa-fw"></i> You have @unreadMessagesCount unread messages
                                    <span class="float-right text-muted small">@lastRead.ToUniversalTime().Humanize()</span>
                                </div>
                            </a>
                        </li>
                        <li class="dropdown-divider"></li>
                       
                        <li>
                            <div class="text-center link-block">
                                <a href="/admin/messages" class="dropdown-item">
                                    <strong>See All Messages</strong>
                                    <i class="fa fa-angle-right"></i>
                                </a>
                            </div>
                        </li>
                    </ul>
                </li>

            <li>
                <a href="/account/logout">
                    <i class="fa fa-sign-out"></i> Log out
                </a>
            </li>
          
        </ul>

    </nav>
</div>