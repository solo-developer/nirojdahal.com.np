@model List<Personal.Domain.Dto.BlogDto>
@using Westwind.AspNetCore.Markdown
@using Humanizer
<section class="cta-section theme-bg-light py-5">
    <div class="container text-center">
        <h2 class="heading">A Blog About Software Development</h2>
        <div class="intro">Welcome to my blog. Subscribe and get my latest blog post in your inbox.</div>
        <div class="single-form-max-width pt-3 mx-auto">
            <form class="signup-form row g-2 g-lg-2 align-items-center">
                <div class="col-12 col-md-9">
                    <label class="sr-only" for="semail">Your email</label>
                    <input type="email" id="semail" name="semail1" class="form-control me-md-1 semail" placeholder="Enter email">
                </div>
                <div class="col-12 col-md-2">
                    <button type="button" id="subscribe" class="btn btn-primary">Subscribe</button>
                </div>
            </form>
        </div>
    </div>
</section>
<section class="blog-list px-3 py-5 p-md-5">
    <div class="container">
        <div class="row">
            @foreach (var blog in Model)
            {
                var content = Markdown.ParseHtmlString(blog.Content);
                var trimmedContent = content.Value.Substring(0, 300);
                var lastIndexOfFullStop = trimmedContent.LastIndexOf(".");
                trimmedContent = trimmedContent.Substring(0, lastIndexOfFullStop + 1);

                <div class="col-md-4 mb-3">
                    <div class="card blog-post-card">
                        <img class="card-img-top" src="~/uploads/blog-img/@blog.BannerImage" alt="@blog.BannerImage">
                        <div class="card-body">
                            <h5 class="card-title"><a class="theme-link" href="/blogs/@blog.Slug">@blog.Title</a></h5>
                            <p class="card-text">@Html.Raw(trimmedContent)</p>
                            <p class="mb-0"><a class="text-link" href="blog-post.html">Read more &rarr;</a></p>

                        </div>
                        <div class="card-footer">
                            <small class="text-muted">Published @blog.CreatedDate.Humanize()</small>
                        </div>
                    </div>
                </div>
            }
        </div>


        <nav class="blog-nav nav nav-justified my-5">
            <a class="nav-link-prev nav-item nav-link d-none rounded-left" href="blog-home.html#">Previous<i class="arrow-prev fas fa-long-arrow-alt-left"></i></a>
            <a class="nav-link-next nav-item nav-link rounded" href="blog-home.html#">Next<i class="arrow-next fas fa-long-arrow-alt-right"></i></a>
        </nav>

    </div>
</section>