@using Personal.Domain.Dto
@model List<UserDto>
@{
    ViewData["Title"] = "User Management";

}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Users</h5>
                    <div class="ibox-tools">
                        <a href="/user-management/user/new" class="btn btn-primary"><i class="fa fa-plus"></i>&nbsp;&nbsp;&nbsp;New User</a>
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">

                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover tbl-datatable">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Image</th>
                                    <th>Name</th>
                                    <th>Username</th>
                                    <th>Mobile No</th>
                                    <th>Address</th>
                                    <th>Roles</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int sn = 1;
                                    foreach (var user in Model)
                                    {
                                        <tr class="gradeX">
                                            <td>
                                                @sn
                                                <input type="hidden" class="user-id" value="@user.UserId" />
                                            </td>

                                            <td class="center">
                                                <img alt="@user.ImageName" class="rounded-circle grid-img" src="~/uploads/user-img/@user.ImageName" />
                                            </td>
                                            <td class="center">@user.FullName</td>
                                            <td class="center">@user.UserName</td>
                                            <td class="center">@user.MobileNo</td>
                                            <td class="center">@user.Address</td>
                                            <td class="center">
                                                @* <ul>
                                                    @{
                                                    foreach (var role in user.Roles)
                                                    {
                                                    <li>@role.RoleName</li>
                                                    }
                                                    }
                                                    </ul>
                                                *@
                                            </td>
                                            <td>

                                                <a href="/user-management/user/edit?user_id=@user.UserId"> <i class="fa fa-edit pointer" data-toggle="tooltip" title="Edit User"></i></a>
                                            </td>
                                        </tr>
                                        sn++;
                                    }
                                }


                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
<script src="~/js/UserManagement/User.js" asp-append-version="true"></script>

}