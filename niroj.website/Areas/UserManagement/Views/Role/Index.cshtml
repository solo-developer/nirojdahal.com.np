@using niroj.website.Areas.UserManagement.Models
@model List<RoleIndexViewModel>
@{
    ViewData["Title"] = "Roles Management";

}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Roles</h5>
                    <div class="ibox-tools">
                        <button type="button" class="btn btn-w-m btn-success btn-header-sm btn-add-role"><i class="fa fa-plus"></i>&nbsp;&nbsp;&nbsp; New Role</button>
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">

                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover tbl-datatable">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Id</th>
                                    <th>Name</th>
                                    <th>Normalized Name</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int sn = 1;
                                    foreach (var role in Model)
                                    {
                                        <tr class="gradeX">
                                            <td>
                                                @sn
                                                <input type="hidden" class="role-id" value="@role.Id" />
                                            </td>

                                            <td class="center">@role.Id</td>
                                            <td class="center">@role.Name</td>
                                            <td class="center">@role.NormalizedName</td>
                                            <th>
                                                <i class="fa fa-edit pointer btn-edit-role" data-toggle="tooltip" title="Edit Role"></i>
                                                <a href="/user-management/role/delete?role_id=@role.Id"> <i class="fa fa-trash pointer btn-delete-role" data-toggle="tooltip" title="Delete Role"></i></a>
                                            </th>
                                        </tr>
                                        sn++;
                                    }
                                }


                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/js/UserManagement/Role.js" asp-append-version="true"></script>
   
}