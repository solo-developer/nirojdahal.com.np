@model List<ProjectDto>
@{
    ViewData["Title"] = "Projects";
    Layout = "_BackendLayout";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Projects</h5>
                    <div class="ibox-tools">
                        <a href="/admin/projects/new" class="btn btn-primary"><i class="fa fa-plus"></i>&nbsp;&nbsp;&nbsp;New Project</a>
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">

                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover tbl-datatable">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Name</th>
                                    <th>Project Type</th>
                                    <th>Description</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int sn = 1;
                                    foreach (var project in Model)
                                    {
                                        <tr class="gradeX">
                                            <td>
                                                @sn

                                            </td>

                                            <td class="center">@project.Name</td>
                                            <td class="center">@project.ProjectType</td>
                                            <td class="center">@project.Description</td>

                                            <td class="center">
                                                <a href="/admin/projects/edit/@project.Id" class="btn btn-icon waves-effect waves-light btn-primary btn-sm " data-toggle="tooltip" title="Edit Project"><i class="fa fa-pencil"></i></a>
                                                <a href="/admin/projects/delete/@project.Id" class="btn btn-icon waves-effect waves-light btn-danger btn-sm delete" data-toggle="tooltip" title="Delete Project"><i class="fa fa-trash"></i></a>


                                            </td>
                                        </tr>
                                        sn++;
                                    }
                                }


                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>