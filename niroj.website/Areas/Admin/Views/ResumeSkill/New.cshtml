@model ResumeSkillDto
@{
    Layout = "_BackendLayout";
    ViewData["Title"] = "Resume Skills";
}
<div class="col-lg-12">
    <div class="ibox ">
        <div class="ibox-title">
            <h5>Resume Skill</h5>
            <div class="ibox-tools">
                <a class="collapse-link">
                    <i class="fa fa-chevron-up"></i>
                </a>

                <a class="close-link">
                    <i class="fa fa-times"></i>
                </a>
            </div>
        </div>
        <div class="ibox-content">
            <form role="form" method="post" enctype="multipart/form-data" action="/admin/resume-skill/save">
                <div class="row">
                    <div class="col-sm-12 b-r">

                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        @Html.HiddenFor(a=>a.Id)
                        <div class="form-group">
                            <label>Name</label>
                            @Html.TextBoxFor(a=>a.Name,null,new{@Class="form-control",Placeholder="Name",required="required"})
                            @Html.ValidationMessageFor(a => a.Name, null, new { @Class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label>Skill Category</label>
                            @Html.DropDownListFor(a=>a.CategoryId,new SelectList(ViewBag.categories,"Id","Name"),"--SELECT--",new{@Class="form-control",Placeholder="Skill Category"})

                            @Html.ValidationMessageFor(a => a.CategoryId, null, new { @Class = "text-danger" })
                        </div>
                       
                        <div>
                            <button class="btn btn-sm btn-primary float-right m-t-n-xs" type="submit"><i class="fa fa-save"></i><strong>&nbsp;&nbsp;&nbsp;Save</strong></button>
                        </div>
                    </div>

                </div>
            </form>
        </div>
    </div>
</div>
