@model List<ResumeSkillDto>
@{
    ViewData["Title"] = "Resume Skills";
    Layout = "_BackendLayout";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Resume Skills</h5>
                    <div class="ibox-tools">
                        <a href="/admin/resume-skill/new" class="btn btn-primary"><i class="fa fa-plus"></i>&nbsp;&nbsp;&nbsp;New Skill</a>
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">

                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover tbl-datatable">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Name</th>
                                    <th>Category</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int sn = 1;
                                    foreach (var skill in Model)
                                    {
                                        <tr class="gradeX">
                                            <td>
                                                @sn
                                               
                                            </td>

                                            <td class="center">@skill.Name</td>
                                            <td class="center">@skill.CategoryName</td>                                          

                                            <td class="center">

                                                <a href="/admin/resume-skill/delete/@skill.Id" class="btn btn-icon waves-effect waves-light btn-danger btn-sm delete" data-toggle="tooltip" title="Delete Skill"><i class="fa fa-trash"></i></a>


                                            </td>
                                        </tr>
                                        sn++;
                                    }
                                }


                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>