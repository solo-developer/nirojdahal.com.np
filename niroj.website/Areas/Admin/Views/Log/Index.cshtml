@model List<niroj.website.Areas.Admin.Models.FileDetailModel>
@{
    ViewData["Title"] = "Error Log";
    Layout = "_BackendLayout";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Error Log</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">

                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover tbl-datatable">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Name</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int sn = 1;
                                    foreach (var file in Model)
                                    {
                                        <tr class="gradeX">
                                            <td>
                                                @sn
                                            </td>

                                            <td class="center">@file.Name</td>
                                            <th>
                                            <a href="/admin/log/error/@file.Name/download"> <i class="fa fa-download pointer" data-toggle="tooltip" title="Download File"></i></a>
                                            </th>
                                        </tr>
                                        sn++;
                                    }
                                }


                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>