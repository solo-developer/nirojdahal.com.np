@using niroj.website.Areas.Admin.Models
@model BlogRatingDto

<form class="rating-form">
    @Html.HiddenFor(a => a.BlogId)
    <div class="form-group row">
        <label class="col-lg-2 col-form-label">Enter Rating (In Number)</label>

        <div class="col-lg-10">
            @Html.TextBoxFor(a => a.Rating, new { @Class = "form-control rating",@type="Number" })
            @Html.ValidationMessageFor(a=>a.Rating,null,new { @Class="text-danger"})
        </div>
    </div>

    <div class="form-group row">
        <div class="col-lg-offset-2 col-lg-10">
            <button class="btn btn-sm btn-primary rating-submit-btn" type="button"><i class="fa fa-save"></i><strong class="ml-5">Save</strong></button>
        </div>
    </div>
</form>