@model List<TagDto>
@{
    ViewData["Title"] = "Tags Management";
    Layout = "_BackendLayout";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Tags</h5>
                    <div class="ibox-tools">
                        <button type="button" class="btn btn-w-m btn-success btn-header-sm btn-add-tag"><i class="fa fa-plus"></i>&nbsp;&nbsp;&nbsp; New Tag</button>
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">

                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover tbl-datatable">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Id</th>
                                    <th>Name</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int sn = 1;
                                    foreach (var tag in Model)
                                    {
                                        <tr class="gradeX">
                                            <td>
                                                @sn
                                                <input type="hidden" class="role-id" value="@tag.Id" />
                                            </td>

                                            <td class="center">@tag.Id</td>
                                            <td class="center">@tag.Name</td>
                                            <th>
                                                <i class="fa fa-edit pointer btn-edit-tag" data-toggle="tooltip" title="Edit Tag"></i>
                                                <a href="/admin/tag/delete?tag_id=@tag.Id"> <i class="fa fa-trash pointer btn-delete-tag" data-toggle="tooltip" title="Delete Tag"></i></a>
                                            </th>
                                        </tr>
                                        sn++;
                                    }
                                }


                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/js/Admin/Tag.js" asp-append-version="true"></script>
   
}