@using Personal.Domain.Dto
@model List<WorkExperienceDto>
@using Westwind.AspNetCore.Markdown

@{
    ViewData["Title"] = "Work Experiences";
    Layout = "_BackendLayout";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Work Experiences</h5>
                    <div class="ibox-tools">
                        <a href="/admin/work-experience/new" class="btn btn-primary"><i class="fa fa-plus"></i>&nbsp;&nbsp;&nbsp;New Experience</a>
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">

                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover tbl-datatable">
                            <thead>
                                <tr>
                                    <th>Company</th>
                                    <th>Position</th>
                                    <th>Start Year</th>
                                    <th>End Year</th>
                                    <th>Description</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int sn = 1;
                                    foreach (var experience in Model)
                                    {
                                        <tr class="gradeX">
                                            <td class="center">@experience.CompanyName</td>
                                            <td class="center">@experience.Position</td>
                                            <td class="center">@experience.StartYear</td>
                                            <td class="center">@experience.EndYear</td>
                                            <td class="center" style="width:350px;">@Html.Raw(Markdown.ParseHtmlString(experience.RoleDescription))</td>

                                            <td class="center">
                                                <a href="/admin/work-experience/edit/@experience.Id" class="btn btn-icon waves-effect waves-light btn-primary btn-sm " data-toggle="tooltip" title="Edit Experience"><i class="fa fa-pencil"></i></a>

                                                <a href="/admin/work-experience/delete/@experience.Id" class="btn btn-icon waves-effect waves-light btn-danger btn-sm delete" data-toggle="tooltip" title="Delete Experience"><i class="fa fa-trash"></i></a>

                                            </td>
                                        </tr>
                                        sn++;
                                    }
                                }


                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>