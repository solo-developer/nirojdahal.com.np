@model WorkExperienceDto
@{
    Layout = "_BackendLayout";
    ViewData["Title"] = "Work Experience";
    string actionName = Model.Id > 0 ? "edit" : "save";
}
@section styles{
<link rel="stylesheet" href="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.css" />

}
<div class="col-lg-12">
    <div class="ibox ">
        <div class="ibox-title">
            <h5>Work Experience</h5>
            <div class="ibox-tools">
                <a class="collapse-link">
                    <i class="fa fa-chevron-up"></i>
                </a>

                <a class="close-link">
                    <i class="fa fa-times"></i>
                </a>
            </div>
        </div>
        <div class="ibox-content">
            <form role="form" method="post" enctype="multipart/form-data" action="/admin/work-experience/@actionName">
                <div class="row">
                    <div class="col-sm-12 b-r">

                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        @Html.HiddenFor(a=>a.Id)
                        <div class="form-group">
                            <label>Company Name</label>
                            @Html.TextBoxFor(a=>a.CompanyName,null,new{@Class="form-control",Placeholder="Company Name",required="required"})
                            @Html.ValidationMessageFor(a => a.CompanyName, null, new { @Class = "text-danger" })
                        </div> 
                        
                        <div class="form-group">
                            <label>Position</label>
                            @Html.TextBoxFor(a=>a.Position,null,new{@Class="form-control",Placeholder="Position",required="required"})
                            @Html.ValidationMessageFor(a => a.Position, null, new { @Class = "text-danger" })
                        </div>
                        
                        <div class="form-group">
                            <label>Start Year</label>
                            @Html.TextBoxFor(a=>a.StartYear,null,new{@Class="form-control",Placeholder="Start Year",required="required",@type="Number"})
                            @Html.ValidationMessageFor(a => a.StartYear, null, new { @Class = "text-danger" })
                        </div>
                        
                        <div class="form-group">
                            <label>End Year</label>
                            @Html.TextBoxFor(a=>a.EndYear,null,new{@Class="form-control",Placeholder="End Year",@type="Number"})
                            @Html.ValidationMessageFor(a => a.EndYear, null, new { @Class = "text-danger" })
                        </div> 

                        <div class="form-group">
                            <label>Description</label>
                            @Html.TextAreaFor(a=>a.RoleDescription,new{@Class="form-control",Placeholder="Content"})

                            @Html.ValidationMessageFor(a => a.RoleDescription, null, new { @Class = "text-danger" })
                        </div>
                        <div>
                            <button class="btn btn-sm btn-primary float-right m-t-n-xs" type="submit"><i class="fa fa-save"></i><strong>&nbsp;&nbsp;&nbsp;Save</strong></button>
                        </div>
                    </div>

                </div>
            </form>
        </div>
    </div>
</div>

@section scripts{
<script src="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.js"></script>
<script>
    $(document).ready(function(){
         var simplemde = new SimpleMDE({ element: document.getElementById("RoleDescription") });       
    })
   
</script>
}