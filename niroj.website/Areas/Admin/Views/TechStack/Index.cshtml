@model List<TechStackDto>
@{
    ViewData["Title"] = "Tech Stack";
    Layout = "_BackendLayout";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Tech Stack List</h5>
                    <div class="ibox-tools">
                        <a href="/admin/tech-stack/new" class="btn btn-primary"><i class="fa fa-plus"></i>&nbsp;&nbsp;&nbsp;New Tech Stack</a>
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">

                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover tbl-datatable">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Id</th>
                                    <th>Title</th>
                                    <th>Description</th>
                                    <th>Technologies/Frameworks</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int sn = 1;
                                    foreach (var stack in Model)
                                    {
                                        <tr class="gradeX">
                                            <td>
                                                @sn
                                                <input type="hidden" class="cat-id" value="@stack.Id" />
                                            </td>

                                            <td class="center">@stack.Id</td>
                                            <td class="center">@stack.Title</td>
                                            <td class="center">@stack.Description</td>
                                            <td class="center">
                                             <ul>
                                                @foreach(var tech in stack.Skills)
                                                {
                                                  <li>@tech</li>  
                                                }
                                                </ul>
                                            </td>
                                            <th>
                                                <a href="/admin/tech-stack/edit/@stack.Id"> <i class="fa fa-edit pointer" data-toggle="tooltip" title="Edit Tech Stack"></i></a>
                                                <a href="/admin/tech-stack/delete/@stack.Id"> <i class="fa fa-trash pointer btn-delete-category" data-toggle="tooltip" title="Delete Skill Category"></i></a>
                                            </th>
                                        </tr>
                                        sn++;
                                    }
                                }


                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/js/Admin/ResumeSkillCategory.js" asp-append-version="true"></script>

}